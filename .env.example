# Peloton Credentials
PELOTON_USERNAME=your_email@example.com
PELOTON_PASSWORD=your_password

# Garmin Connect Credentials
GARMIN_USERNAME=your_garmin_email@example.com
GARMIN_PASSWORD=your_garmin_password

# Strava API Credentials
# Get these from: https://www.strava.com/settings/api
# Use: npm run strava-auth YOUR_CLIENT_ID YOUR_CLIENT_SECRET
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_ACCESS_TOKEN=your_access_token
STRAVA_REFRESH_TOKEN=your_refresh_token

# Sync Configuration (Optional - defaults shown)
# How often to run syncs in hours (default: 2)
SYNC_INTERVAL_HOURS=2

# Minimum activity duration in minutes to sync to Strava (default: 25)
STRAVA_MIN_DURATION_MINUTES=25

# Hours to wait before syncing to Strava (default: 1.5)
STRAVA_WAIT_HOURS=1.5

# Time window in minutes for matching activities (default: 30)
MATCHING_TIME_WINDOW_MINUTES=30

# Logging Configuration (Optional)
# Logging level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# State Database Path (Optional)
# Path to state database file (default: ./data/state.json)
STATE_DB_PATH=./data/state.json
